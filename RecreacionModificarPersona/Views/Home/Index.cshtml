@model List<Modelos.clasePersonaConNombreDep>
@{
    ViewBag.Title = "Listado persona deps";
}

<h2>Lista de Personas</h2>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Nombre Departamento</th>
            <th>Seleccionar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var persona in Model)
        {
            <tr>
                <td>@persona.Nombre</td>
                <td>@persona.Apellidos</td>
                <td>@persona.NombreDepartamento</td>
                <td>
                    <input type="checkbox" name="personaIds" value="@persona.Seleccionar" />
                </td>
            </tr>
        }
    </tbody>
</table>

<form asp-action="ActualizarPersona" method="post">
    <div class="form-group">
        <label for="nuevoDepartamentoId">Seleccionar nuevo departamento</label>
        <select id="nuevoDepartamentoId" name="nuevoDepartamentoId" class="form-control">
            @foreach (var depto in Model)
            {
                <option value="@depto.Id">@depto.Nombre</option>
            }
        </select>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Actualizar departamento</button>
    </div>
</form>

@if (ViewBag.Mensaje != null)
{
    <div class="alert alert-info">
        @ViewBag.Mensaje
    </div>
}
